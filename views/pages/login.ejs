<%- include('../layouts/loginHeader'); -%>

<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Welcome Back! </h1>
                </div>
                <img src="" alt="">
                <form class="user" action="/login" method="post">
                  <div class="form-group" id="eiei">
                    <input type="text" name="username" class="form-control form-control-user" id="exampleInputEmail"
                      aria-describedby="emailHelp" placeholder="Enter Username....">
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" class="form-control form-control-user"
                      id="exampleInputPassword" placeholder="Enter Password....">
                  </div>
                  <div class="form-group">
                    <% if(err) {%>
                    <p style="color: red">Incorrect username or password</p>
                    <% } %>
                  </div>
                  <button type="submit" class="btn btn-google btn-user btn-block">Login</button>
                  <hr>
                </form>
               
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>

<%- include('../layouts/loginFooter'); -%>