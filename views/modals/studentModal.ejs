                                  <option>นางสาว</option>
                                  <option>นาง</option>
                              </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">ชื่อ</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control form-control-lg" name="firstName" id="firstName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">นามสกุล</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control form-control-lg" name="lastName" id="lastName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">คณะ</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control form-control-lg" name="faculty" id="faculty">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">สาขา</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control form-control-lg" name="major" id="major">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">ชั้นปี</label>
                            <div class="col-sm-10">
                                <input oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" required type="text" class="form-control form-control-lg" name="year" id="year">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">สายการเรียน</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control form-control-lg" name="branch" id="branch">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary">ยืนยัน</button>
                    </div>
            </form>
