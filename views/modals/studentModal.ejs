                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">รหัสนิสิต</label>
                            <div class="col-sm-10">
                                <input oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" required type="text" class="form-control form-control-lg" name="studentId" id="studentId">
                            </div>
                        </div>
