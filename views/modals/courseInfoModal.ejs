<!-- The Modal -->
<div class="modal fade myModal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">เพิ่มการสอบ</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method="POST" action="/manageCourse/courseInfo/addExam/<%=course._id%>">

                    <div class="form-group row">
                        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">ช่วงสอบ</label>
                        <div class="col-sm-10">
                            <select required name="season" class="form-control">
                                <option>กลางภาค</option>
                                <option>ปลายภาค</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">วันที่สอบ</label>
                        <div class="col-sm-10">
                            <input required required type="date" class="form-control form-control-lg" name="date">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">เวลาเริ่ม</label>
                        <div class="col-sm-10">
                            <input required required type="text" class="form-control form-control-lg" name="timeStart">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">เวลาสิ้นสุด</label>
                        <div class="col-sm-10">
                            <input required required type="text" class="form-control form-control-lg" name="timeFinish">
                        </div>
                    </div>

                    <input required readonly required type="text" class="form-control form-control-lg" name="status" value="รอดำเดินการ" style="display: none">

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary">ยืนยัน</button>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->



        </div>
    </div>
</div>
<!--modal เพิ่ม-->